<h1>Quotes</h1>
<div class="row">
    {{#each quotes}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                {{#if user}}
                {{{editIcon user.id ../user.id id}}}
                {{/if}}
            </div>
            <div class="card-content center-align">
                <h5>{{title}}</h5>
                <p class="quote-text">{{ stripTags (truncate body 250) }}</p>
                <br>
                <div class="chip">
                    <img src="{{user.image}}">
                    <a href="/quotes/user/{{user.id}}"> {{user.firstName}} {{user.lastName}}</a>
                </div>
            </div>
            <div class="card-action center-align">
                <a class="btn grey" href="/quotes/show/{{id}}">Read More</a>
            </div>
        </div>
    </div>
    {{else}}
    <p>No Quotes Found</p>
    {{/each}}
</div>