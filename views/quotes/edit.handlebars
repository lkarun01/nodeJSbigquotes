<h1>Edit Quote</h1>
<div class="row">
    <form action="/quotes/{{quote.id}}?_method=PUT" method="POST" class="col s12">
        <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field">
                <input type="text" name="title" value="{{quote.title}}">
                <label for="title">Title</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <select name="status">
                    {{#select quote.status}}
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                    <option value="unpublished">Unpublished</option>
                    {{/select}}
                </select>
                <label>Status</label>
            </div>
        </div>
        <div class="row">
            <p>
                <label>
                    <input type="checkbox" name="allowComments" class="filled-in" id="filled-in-box"
                        {{#if quote.allowComments}} checked="checked" {{/if}}>
                    <span>Allow Comments</span>
                </label>
            </p>
        </div>
        <div class="row">
            <div class="input-field">
                <h5>Tell Us new Quotes</h5>
                <textarea name="body">{{quote.body}}</textarea>
            </div>
        </div>
        <input type="submit" value="Save" class="btn">
    </form>
</div>